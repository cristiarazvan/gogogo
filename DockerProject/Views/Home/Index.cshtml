@{
    ViewData["Title"] = "Home Page";
}

<div class="hero-section">
    <div class="hero-content">
        <h1 class="hero-title">Welcome to Restaurant Manager</h1>
        <p class="hero-subtitle">Manage your restaurants and categories with ease</p>
    </div>
</div>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <h2 class="section-title text-center mb-5">What would you like to do?</h2>

            <div class="row g-4">
                <div class="col-md-6">
                    <div class="feature-card">
                        <div class="feature-icon restaurants-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M8.5 3.5a2.5 2.5 0 0 0-5 0v9a1.5 1.5 0 0 0 3 0V6h1.5v6.5a1.5 1.5 0 0 0 3 0v-9zm4-1a.5.5 0 0 0-.5.5v9a1.5 1.5 0 0 1-3 0v-9a.5.5 0 0 0-1 0v9a2.5 2.5 0 0 0 5 0V3a.5.5 0 0 0-.5-.5z"/>
                            </svg>
                        </div>
                        <h3 class="feature-title">Restaurants</h3>
                        <p class="feature-description">Browse, manage, and organize your restaurant listings. Add new venues or update existing ones.</p>
                        <a asp-controller="Restaurants" asp-action="Index" class="btn btn-primary btn-lg feature-btn">View Restaurants</a>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="feature-card">
                        <div class="feature-icon categories-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M1 2.5A1.5 1.5 0 0 1 2.5 1h3A1.5 1.5 0 0 1 7 2.5v3A1.5 1.5 0 0 1 5.5 7h-3A1.5 1.5 0 0 1 1 5.5v-3zm8 0A1.5 1.5 0 0 1 10.5 1h3A1.5 1.5 0 0 1 15 2.5v3A1.5 1.5 0 0 1 13.5 7h-3A1.5 1.5 0 0 1 9 5.5v-3zm-8 8A1.5 1.5 0 0 1 2.5 9h3A1.5 1.5 0 0 1 7 10.5v3A1.5 1.5 0 0 1 5.5 15h-3A1.5 1.5 0 0 1 1 13.5v-3zm8 0A1.5 1.5 0 0 1 10.5 9h3a1.5 1.5 0 0 1 1.5 1.5v3a1.5 1.5 0 0 1-1.5 1.5h-3A1.5 1.5 0 0 1 9 13.5v-3z"/>
                            </svg>
                        </div>
                        <h3 class="feature-title">Categories</h3>
                        <p class="feature-description">Organize restaurants by categories. Create new categories or modify existing classification systems.</p>
                        <a asp-controller="Categories" asp-action="Index" class="btn btn-success btn-lg feature-btn">View Categories</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="info-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-12 text-center">
                <h3 class="info-title">Streamline Your Restaurant Management</h3>
                <p class="info-text">Our intuitive platform helps you keep track of all your restaurants and organize them efficiently with custom categories.</p>
            </div>
        </div>
    </div>
</div>
