@{
    ViewData["Title"] = "Privacy Policy";
}

<!-- Page Header -->
<div class="page-header mb-4">
    <div class="page-header-content">
        <div class="container">
            <nav aria-label="breadcrumb" class="mb-2">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="/" class="text-white-50">Home</a></li>
                    <li class="breadcrumb-item active text-white">Privacy Policy</li>
                </ol>
            </nav>
            <h1 class="page-title">
                <i class="bi bi-shield-check me-3"></i>Privacy Policy
            </h1>
            <p class="page-subtitle mb-0">How we protect your data</p>
        </div>
    </div>
</div>

<div class="container pb-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body p-4 p-lg-5">
                    <div class="mb-5">
                        <h2 class="fw-bold mb-3" style="color: var(--text-primary);">
                            <i class="bi bi-info-circle me-2" style="color: var(--primary-400);"></i>Introduction
                        </h2>
                        <p class="text-muted">
                            At GoGoGo, we are committed to protecting your privacy and ensuring the security of your personal information. This privacy policy explains how we collect, use, and safeguard your data when you use our food delivery service.
                        </p>
                    </div>

                    <div class="mb-5">
                        <h2 class="fw-bold mb-3" style="color: var(--text-primary);">
                            <i class="bi bi-collection me-2" style="color: var(--primary-400);"></i>Information We Collect
                        </h2>
                        <ul class="text-muted">
                            <li class="mb-2">Account information (name, email, phone number)</li>
                            <li class="mb-2">Delivery addresses and location data</li>
                            <li class="mb-2">Order history and preferences</li>
                            <li class="mb-2">Payment information (processed securely)</li>
                        </ul>
                    </div>

                    <div class="mb-5">
                        <h2 class="fw-bold mb-3" style="color: var(--text-primary);">
                            <i class="bi bi-gear me-2" style="color: var(--primary-400);"></i>How We Use Your Information
                        </h2>
                        <ul class="text-muted">
                            <li class="mb-2">To process and deliver your orders</li>
                            <li class="mb-2">To improve our services and user experience</li>
                            <li class="mb-2">To send you relevant updates and promotions</li>
                            <li class="mb-2">To ensure the security of your account</li>
                        </ul>
                    </div>

                    <div class="mb-5">
                        <h2 class="fw-bold mb-3" style="color: var(--text-primary);">
                            <i class="bi bi-lock me-2" style="color: var(--primary-400);"></i>Data Security
                        </h2>
                        <p class="text-muted">
                            We implement industry-standard security measures to protect your personal information. Your data is encrypted and stored securely on our servers. We never share your personal information with third parties without your consent.
                        </p>
                    </div>

                    <div class="mb-4">
                        <h2 class="fw-bold mb-3" style="color: var(--text-primary);">
                            <i class="bi bi-envelope me-2" style="color: var(--primary-400);"></i>Contact Us
                        </h2>
                        <p class="text-muted">
                            If you have any questions about our privacy policy, please contact us at:
                        </p>
                        <p class="fw-bold" style="color: var(--primary-400);">privacy@gogogo.com</p>
                    </div>

                    <div class="text-center pt-4" style="border-top: 1px solid var(--border-color);">
                        <p class="text-muted small mb-0">Last updated: January 2025</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
