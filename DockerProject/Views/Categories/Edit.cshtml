@model DockerProject.Models.Category

@{
    ViewData["Title"] = "Edit Category";
}

<!-- Page Header -->
<div class="page-header mb-4">
    <div class="page-header-content">
        <div class="container">
            <nav aria-label="breadcrumb" class="mb-2">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="/" class="text-white-50">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index" class="text-white-50">Categories</a></li>
                    <li class="breadcrumb-item active text-white">Edit</li>
                </ol>
            </nav>
            <h1 class="page-title">
                <i class="bi bi-pencil me-3"></i>Edit Category
            </h1>
            <p class="page-subtitle mb-0">Update category information</p>
        </div>
    </div>
</div>

<div class="container pb-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body p-4 p-lg-5">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-4">
                            <label asp-for="Name" class="form-label fw-bold">Category Name</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text"><i class="bi bi-tag"></i></span>
                                <input asp-for="Name" class="form-control" placeholder="e.g., Italian, Mexican, Fast Food..." />
                            </div>
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="d-flex gap-3">
                            <button type="submit" class="btn btn-primary btn-lg flex-grow-1">
                                <i class="bi bi-check-lg me-2"></i>Save Changes
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="bi bi-x-lg me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
