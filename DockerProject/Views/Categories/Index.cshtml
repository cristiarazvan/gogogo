
@model List<string>

@{
    ViewData["Title"] = "Categorii";
}

<style>
    .glovo-container {
        display: flex;
        justify_content: center;
        gap: 20px;
        flex-wrap: wrap;
        margin-top: 50px;
    }

    .glovo-bubble {
        width: 150px;
        height: 150px;
        border-radius: 50%; /* Le face rotunde */
        background-color: #fceea6; /* Galbenul pal Glovo */
        border: 2px solid #00a082; /* Verdele Glovo */
        display: flex;
        align-items: center;
        justify_content: center;
        font-weight: bold;
        font-size: 1.2rem;
        color: #333;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        cursor: pointer;
        transition: transform 0.2s;
        text-decoration: none;
    }

    .glovo-bubble:hover {
        transform: scale(1.05); /* Se măresc puțin la mouse over */
        background-color: #ffd645;
    }
</style>

<div class="text-center">
    <h1 class="display-4">Ce vrei să comanzi azi?</h1>
    <p>Alege o categorie</p>
</div>

<div class="glovo-container">
    @foreach (var category in Model)
    {
        <a href="/Restaurants?category=@category" class="glovo-bubble">
            @category
        </a>
    }
</div>
