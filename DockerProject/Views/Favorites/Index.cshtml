@model IEnumerable<DockerProject.Models.Favorite>

@{
    ViewData["Title"] = "My Favorites";
}

<div class="container mt-4">
    <h1>My Favorites</h1>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Info"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            @TempData["Info"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var favorite in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        @if (!string.IsNullOrEmpty(favorite.Product.ImagePath))
                        {
                            <img src="~/@favorite.Product.ImagePath" class="card-img-top" alt="@favorite.Product.Title" style="height: 200px; object-fit: cover;">
                        }
                        <div class="card-body">
                            <h5 class="card-title">@favorite.Product.Title</h5>
                            <p class="card-text">
                                <small class="text-muted">@favorite.Product.Restaurant.Name</small>
                            </p>
                            <p class="card-text">@favorite.Product.Description</p>
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="h5 mb-0">$@favorite.Product.Price.ToString("F2")</span>
                                @if (favorite.Product.Stock > 0)
                                {
                                    <span class="badge bg-success">In Stock (@favorite.Product.Stock)</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Out of Stock</span>
                                }
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <div class="row g-2">
                                <div class="col-12">
                                    @if (favorite.Product.Stock > 0)
                                    {
                                        <form asp-action="MoveToCart" method="post" class="d-inline w-100">
                                            <input type="hidden" name="favoriteId" value="@favorite.Id" />
                                            <div class="input-group input-group-sm mb-2">
                                                <input type="number" name="quantity" value="1" min="1" max="@favorite.Product.Stock" class="form-control" />
                                                <button type="submit" class="btn btn-primary">Add to Cart</button>
                                            </div>
                                        </form>
                                    }
                                    else
                                    {
                                        <button class="btn btn-secondary btn-sm w-100 mb-2" disabled>Out of Stock</button>
                                    }
                                </div>
                                <div class="col-6">
                                    <a asp-controller="Products" asp-action="Details" asp-route-id="@favorite.Product.Id" class="btn btn-outline-primary btn-sm w-100">View Details</a>
                                </div>
                                <div class="col-6">
                                    <form asp-action="Remove" method="post" class="d-inline w-100">
                                        <input type="hidden" name="favoriteId" value="@favorite.Id" />
                                        <button type="submit" class="btn btn-outline-danger btn-sm w-100" onclick="return confirm('Remove from favorites?')">Remove</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            <h4 class="alert-heading">No favorites yet!</h4>
            <p>Start adding products to your favorites to see them here.</p>
            <hr />
            <a asp-controller="Products" asp-action="Index" class="btn btn-primary">Browse Products</a>
        </div>
    }
</div>
