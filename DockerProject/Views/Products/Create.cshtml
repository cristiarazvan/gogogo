@model DockerProject.Models.Product

@{
    ViewData["Title"] = "Add Product";
}

<!-- Page Header -->
<div class="page-header mb-4">
    <div class="page-header-content">
        <div class="container">
            <nav aria-label="breadcrumb" class="mb-2">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="/" class="text-white-50">Home</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Products" asp-action="Index" class="text-white-50">Products</a></li>
                    <li class="breadcrumb-item active text-white">Add New</li>
                </ol>
            </nav>
            <h1 class="page-title">
                <i class="bi bi-plus-circle me-3"></i>Add Product
            </h1>
            <p class="page-subtitle mb-0">Create a new product listing</p>
        </div>
    </div>
</div>

<div class="container pb-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body p-4 p-lg-5">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row g-4 mb-4">
                            <div class="col-md-6">
                                <label asp-for="Title" class="form-label fw-bold">Product Name</label>
                                <input asp-for="Title" class="form-control form-control-lg" placeholder="Enter product name" />
                                <span asp-validation-for="Title" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Price" class="form-label fw-bold">Price</label>
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="0.00" />
                                </div>
                                <span asp-validation-for="Price" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-bold">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Describe the product..."></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Product Image</label>
                            <input type="file" name="imageFile" class="form-control form-control-lg" accept=".jpg,.jpeg,.png,.gif,.webp" />
                            <div class="form-text">Upload a high-quality image (JPG, PNG, GIF, WebP)</div>
                        </div>

                        <div class="row g-4 mb-4">
                            <div class="col-md-4">
                                <label asp-for="Stock" class="form-label fw-bold">Stock Quantity</label>
                                <input asp-for="Stock" type="number" class="form-control form-control-lg" placeholder="0" />
                                <span asp-validation-for="Stock" class="text-danger small"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="RestaurantId" class="form-label fw-bold">Restaurant</label>
                                <select asp-for="RestaurantId" class="form-select form-select-lg" asp-items="ViewBag.RestaurantId">
                                    <option value="">-- Select --</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="CategoryId" class="form-label fw-bold">Category</label>
                                <select asp-for="CategoryId" class="form-select form-select-lg" asp-items="ViewBag.CategoryId">
                                    <option value="">-- Select --</option>
                                </select>
                            </div>
                        </div>

                        <input type="hidden" asp-for="IsApproved" value="1" />

                        <div class="d-flex gap-3">
                            <button type="submit" class="btn btn-primary btn-lg flex-grow-1">
                                <i class="bi bi-check-lg me-2"></i>Create Product
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="bi bi-x-lg me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
