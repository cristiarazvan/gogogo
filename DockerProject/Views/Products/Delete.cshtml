@model DockerProject.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<!-- Page Header -->
<div class="page-header mb-4">
    <div class="page-header-content">
        <div class="container">
            <nav aria-label="breadcrumb" class="mb-2">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="/" class="text-white-50">Home</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Products" asp-action="Index" class="text-white-50">Products</a></li>
                    <li class="breadcrumb-item active text-white">Delete</li>
                </ol>
            </nav>
            <h1 class="page-title">
                <i class="bi bi-trash me-3"></i>Delete Product
            </h1>
            <p class="page-subtitle mb-0">Confirm product deletion</p>
        </div>
    </div>
</div>

<div class="container pb-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body p-4 p-lg-5 text-center">
                    <div class="mb-4">
                        <div class="d-inline-flex align-items-center justify-content-center rounded-circle bg-danger-subtle text-danger mb-3" style="width: 80px; height: 80px;">
                            <i class="bi bi-exclamation-triangle fs-1"></i>
                        </div>
                        <h3 class="fw-bold">Delete Product?</h3>
                        <p class="text-muted">This action cannot be undone</p>
                    </div>

                    <div class="card bg-light mb-4">
                        <div class="card-body">
                            <div class="d-flex align-items-center gap-3">
                                @if (!string.IsNullOrEmpty(Model.ImagePath))
                                {
                                    <img src="@Model.ImagePath" class="rounded" style="width: 80px; height: 80px; object-fit: cover;" alt="@Model.Title" />
                                }
                                else
                                {
                                    <div class="bg-secondary rounded d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                                        <i class="bi bi-box text-white fs-3"></i>
                                    </div>
                                }
                                <div class="text-start">
                                    <h5 class="fw-bold mb-1">@Model.Title</h5>
                                    <p class="text-primary fw-bold mb-1">@Model.Price.ToString("C")</p>
                                    <p class="text-muted small mb-0">
                                        @(Model.Restaurant?.Name ?? "Unknown Restaurant")
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-warning">
                        <i class="bi bi-info-circle me-2"></i>
                        This will also remove all reviews associated with this product.
                    </div>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex gap-3">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg flex-grow-1">
                                <i class="bi bi-x-lg me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg flex-grow-1">
                                <i class="bi bi-trash me-2"></i>Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
