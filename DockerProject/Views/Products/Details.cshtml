@using Microsoft.AspNetCore.Identity
@using DockerProject.Models

@model DockerProject.Models.Product
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = Model.Title;

    var currentUser = await UserManager.GetUserAsync(User);
    var currentUserId = currentUser?.Id;
    var isAdmin = User.IsInRole("Admin");

    var isRestaurantOwner = (Model.Restaurant != null && Model.Restaurant.OwnerId == currentUserId);
    var canEditProduct = isAdmin || isRestaurantOwner;
}

<!-- Page Header -->
<div class="page-header mb-4">
    <div class="page-header-content">
        <div class="container">
            <nav aria-label="breadcrumb" class="mb-3">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="/" class="text-white-50">Home</a></li>
                    @if (Model.Restaurant != null)
                    {
                        <li class="breadcrumb-item"><a asp-controller="Restaurants" asp-action="Details" asp-route-id="@Model.RestaurantId" class="text-white-50">@Model.Restaurant.Name</a></li>
                    }
                    <li class="breadcrumb-item active text-white">@Model.Title</li>
                </ol>
            </nav>
            <h1 class="page-title">@Model.Title</h1>
            <div class="d-flex align-items-center gap-3 flex-wrap">
                @if (Model.Category != null)
                {
                    <span class="badge bg-white bg-opacity-25 text-white rounded-pill px-3 py-2">
                        <i class="bi bi-tag me-1"></i>@Model.Category.Name
                    </span>
                }
                <span class="text-white-50">
                    <i class="bi bi-shop me-1"></i>@(Model.Restaurant?.Name ?? "Unknown Restaurant")
                </span>
            </div>
        </div>
    </div>
</div>

<div class="container pb-5">
    <!-- Product Details Card -->
    <div class="card mb-5">
        <div class="row g-0">
            <div class="col-lg-5">
                <div class="p-4 h-100 d-flex align-items-center justify-content-center" style="background: var(--bg-tertiary); min-height: 350px;">
                    @if (!string.IsNullOrEmpty(Model.ImagePath))
                    {
                        <img src="@Model.ImagePath" class="img-fluid rounded-3" alt="@Model.Title" style="max-height: 350px; object-fit: cover; box-shadow: var(--shadow-lg);">
                    }
                    else
                    {
                        <div class="text-center text-muted">
                            <i class="bi bi-image display-1"></i>
                            <p class="mt-2">No image available</p>
                        </div>
                    }
                </div>
            </div>
            <div class="col-lg-7">
                <div class="card-body p-4 p-lg-5 d-flex flex-column h-100">
                    <div class="d-flex justify-content-between align-items-start mb-4 flex-wrap gap-2">
                        <div>
                            @if (Model.Stock > 0)
                            {
                                <span class="badge bg-success rounded-pill px-3 py-2">
                                    <i class="bi bi-check-circle me-1"></i>In Stock (@Model.Stock available)
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-danger rounded-pill px-3 py-2">
                                    <i class="bi bi-x-circle me-1"></i>Out of Stock
                                </span>
                            }
                        </div>
                        <h2 class="text-gradient fw-bold mb-0">@Model.Price.ToString("C")</h2>
                    </div>

                    <p class="fs-5 mb-4 flex-grow-1" style="color: var(--text-muted);">@Model.Description</p>

                    <div class="d-flex flex-wrap gap-2">
                        @if (User.Identity.IsAuthenticated && Model.Stock > 0)
                        {
                            <form asp-controller="Cart" asp-action="AddToCart" method="post" class="flex-grow-1">
                                <input type="hidden" name="productId" value="@Model.Id" />
                                <input type="hidden" name="quantity" value="1" />
                                <button type="submit" class="btn btn-primary btn-lg w-100">
                                    <i class="bi bi-cart-plus me-2"></i>Add to Cart
                                </button>
                            </form>
                            <form asp-controller="Favorites" asp-action="Add" method="post">
                                <input type="hidden" name="productId" value="@Model.Id" />
                                <button type="submit" class="btn btn-outline-danger btn-lg" title="Add to Favorites">
                                    <i class="bi bi-heart"></i>
                                </button>
                            </form>
                        }
                        else if (!User.Identity.IsAuthenticated)
                        {
                            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary btn-lg flex-grow-1">
                                <i class="bi bi-box-arrow-in-right me-2"></i>Login to Order
                            </a>
                        }

                        @if (canEditProduct)
                        {
                            <div class="dropdown">
                                <button class="btn btn-outline-secondary btn-lg dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-gear"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item" asp-action="Edit" asp-route-id="@Model.Id">
                                            <i class="bi bi-pencil me-2"></i>Edit Product
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@Model.Id">
                                            <i class="bi bi-trash me-2"></i>Delete Product
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Reviews Section -->
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="d-flex align-items-center justify-content-between mb-4 flex-wrap gap-2">
                <h3 class="fw-bold mb-0">
                    <i class="bi bi-chat-left-text me-2" style="color: var(--primary-400);"></i>Reviews
                    <span class="badge rounded-pill ms-2" style="background: rgba(147, 51, 234, 0.15); color: var(--primary-400);">@(Model.Reviews?.Count ?? 0)</span>
                </h3>

                @if (User.Identity.IsAuthenticated)
                {
                    <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#reviewForm">
                        <i class="bi bi-pencil-square me-2"></i>Write a Review
                    </button>
                }
            </div>

            <!-- Review Form -->
            <div class="collapse mb-4 @(Model.Reviews == null || !Model.Reviews.Any() ? "show" : "")" id="reviewForm">
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="card">
                        <div class="card-body p-4">
                            <form asp-action="AddReview" method="post">
                                <input type="hidden" name="productId" value="@Model.Id" />
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Your Review</label>
                                    <textarea name="reviewText" class="form-control" rows="4" placeholder="Share your experience with this product..." required></textarea>
                                </div>
                                <div class="text-end">
                                    <button type="submit" class="btn btn-primary px-4">
                                        <i class="bi bi-send me-2"></i>Post Review
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-primary">
                        <i class="bi bi-info-circle me-2"></i>
                        Please <a asp-area="Identity" asp-page="/Account/Login" class="fw-bold">login</a> to leave a review.
                    </div>
                }
            </div>

            <!-- Reviews List -->
            @if (Model.Reviews != null && Model.Reviews.Any())
            {
                <div class="vstack gap-3">
                    @foreach (var review in Model.Reviews)
                    {
                        var isMyReview = (currentUserId != null && review.UserId == currentUserId);
                        var canManage = isMyReview || isAdmin;

                        <div class="card @(isMyReview ? "" : "")" style="@(isMyReview ? "border: 2px solid var(--primary-500);" : "")">
                            <div class="card-body p-4">
                                <div class="d-flex gap-3">
                                    <div class="user-avatar flex-shrink-0">
                                        @(review.User?.UserName?.Substring(0, 1).ToUpper() ?? "?")
                                    </div>
                                    <div class="flex-grow-1">
                                        <div class="d-flex justify-content-between align-items-start mb-2 flex-wrap gap-2">
                                            <div>
                                                <h6 class="fw-bold mb-0" style="color: var(--text-primary);">
                                                    @(review.User?.UserName ?? "Anonymous")
                                                    @if (isMyReview)
                                                    {
                                                        <span class="badge bg-primary ms-2">You</span>
                                                    }
                                                </h6>
                                                <small class="text-muted">Verified Customer</small>
                                            </div>

                                            @if (canManage)
                                            {
                                                <div id="actions-@review.Id" class="d-flex gap-2">
                                                    <button type="button" class="btn btn-sm btn-outline-primary" onclick="enableEditMode(@review.Id)">
                                                        <i class="bi bi-pencil"></i>
                                                    </button>
                                                    <form asp-action="DeleteReview" method="post" class="d-inline" onsubmit="return confirm('Delete this review?');">
                                                        <input type="hidden" name="reviewId" value="@review.Id" />
                                                        <input type="hidden" name="productId" value="@Model.Id" />
                                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            }
                                        </div>

                                        <div id="view-mode-@review.Id">
                                            <p class="mb-0" style="color: var(--text-secondary);">@review.Text</p>
                                        </div>

                                        @if (canManage)
                                        {
                                            <div id="edit-mode-@review.Id" style="display: none;">
                                                <form asp-action="EditReview" method="post">
                                                    <input type="hidden" name="reviewId" value="@review.Id" />
                                                    <input type="hidden" name="productId" value="@Model.Id" />
                                                    <textarea name="newText" class="form-control mb-3" rows="3">@review.Text</textarea>
                                                    <div class="d-flex gap-2 justify-content-end">
                                                        <button type="button" class="btn btn-sm btn-outline-secondary" onclick="cancelEditMode(@review.Id)">Cancel</button>
                                                        <button type="submit" class="btn btn-sm btn-primary">Save Changes</button>
                                                    </div>
                                                </form>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="empty-state">
                    <div class="empty-state-icon" style="background: rgba(147, 51, 234, 0.1);">
                        <i class="bi bi-chat-left-text" style="color: var(--primary-400);"></i>
                    </div>
                    <h3 class="empty-state-title">No reviews yet</h3>
                    <p class="empty-state-message">Be the first to share your experience!</p>
                </div>
            }
        </div>
    </div>
</div>

<script>
    function enableEditMode(reviewId) {
        document.getElementById('view-mode-' + reviewId).style.display = 'none';
        var actions = document.getElementById('actions-' + reviewId);
        if(actions) actions.style.display = 'none';
        document.getElementById('edit-mode-' + reviewId).style.display = 'block';
    }

    function cancelEditMode(reviewId) {
        document.getElementById('view-mode-' + reviewId).style.display = 'block';
        var actions = document.getElementById('actions-' + reviewId);
        if(actions) actions.style.display = 'flex';
        document.getElementById('edit-mode-' + reviewId).style.display = 'none';
    }
</script>
