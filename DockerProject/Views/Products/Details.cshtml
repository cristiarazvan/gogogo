@using Microsoft.AspNetCore.Identity
@using DockerProject.Models

@model DockerProject.Models.Product
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = Model.Title;

    var currentUser = await UserManager.GetUserAsync(User);
    var currentUserId = currentUser?.Id;
    var isAdmin = User.IsInRole("Admin");

    var isRestaurantOwner = (Model.Restaurant != null && Model.Restaurant.OwnerId == currentUserId);
    var canEditProduct = isAdmin || isRestaurantOwner;
}

<!-- Page Header -->
<div class="page-header mb-4">
    <div class="page-header-content">
        <div class="container">
            <nav aria-label="breadcrumb" class="mb-3">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="/" class="text-white-50">Home</a></li>
                    @if (Model.Restaurant != null)
                    {
                        <li class="breadcrumb-item"><a asp-controller="Restaurants" asp-action="Details" asp-route-id="@Model.RestaurantId" class="text-white-50">@Model.Restaurant.Name</a></li>
                    }
                    <li class="breadcrumb-item active text-white">@Model.Title</li>
                </ol>
            </nav>
            <h1 class="page-title">@Model.Title</h1>
            <div class="d-flex align-items-center gap-3 flex-wrap">
                @if (Model.Category != null)
                {
                    <span class="badge bg-white bg-opacity-25 text-white rounded-pill px-3 py-2">
                        <i class="bi bi-tag me-1"></i>@Model.Category.Name
                    </span>
                }
                <span class="text-white-50">
                    <i class="bi bi-shop me-1"></i>@(Model.Restaurant?.Name ?? "Unknown Restaurant")
                </span>
            </div>
        </div>
    </div>
</div>

<div class="container pb-5">
    <!-- Product Details Card -->
    <div class="card mb-5">
        <div class="row g-0">
            <div class="col-lg-5">
                <div class="p-4 h-100 d-flex align-items-center justify-content-center" style="background: var(--bg-tertiary); min-height: 350px;">
                    @if (!string.IsNullOrEmpty(Model.ImagePath))
                    {
                        <img src="@Model.ImagePath" class="img-fluid rounded-3" alt="@Model.Title" style="max-height: 350px; object-fit: cover; box-shadow: var(--shadow-lg);">
                    }
                    else
                    {
                        <div class="text-center text-muted">
                            <i class="bi bi-image display-1"></i>
                            <p class="mt-2">No image available</p>
                        </div>
                    }
                </div>
            </div>
            <div class="col-lg-7">
                <div class="card-body p-4 p-lg-5 d-flex flex-column h-100">
                    <div class="d-flex justify-content-between align-items-start mb-4 flex-wrap gap-2">
                        <div>
                            @if (Model.Stock > 0)
                            {
                                <span class="badge bg-success rounded-pill px-3 py-2">
                                    <i class="bi bi-check-circle me-1"></i>In Stock (@Model.Stock available)
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-danger rounded-pill px-3 py-2">
                                    <i class="bi bi-x-circle me-1"></i>Out of Stock
                                </span>
                            }
                        </div>
                        <h2 class="text-gradient fw-bold mb-0">@Model.Price.ToString("C")</h2>
                    </div>

                    <p class="fs-5 mb-4 flex-grow-1" style="color: var(--text-muted);">@Model.Description</p>

                    <div class="d-flex flex-wrap gap-2">
                        @if (User.Identity.IsAuthenticated && Model.Stock > 0)
                        {
                            <form asp-controller="Cart" asp-action="AddToCart" method="post" class="flex-grow-1">
                                <input type="hidden" name="productId" value="@Model.Id" />
                                <input type="hidden" name="quantity" value="1" />
                                <button type="submit" class="btn btn-primary btn-lg w-100">
                                    <i class="bi bi-cart-plus me-2"></i>Add to Cart
                                </button>
                            </form>
                            <form asp-controller="Favorites" asp-action="Add" method="post">
                                <input type="hidden" name="productId" value="@Model.Id" />
                                <button type="submit" class="btn btn-outline-danger btn-lg" title="Add to Favorites">
                                    <i class="bi bi-heart"></i>
                                </button>
                            </form>
                        }
                        else if (!User.Identity.IsAuthenticated)
                        {
                            <a asp-area="Identity" asp-page="/Account/Login" asp-route-ReturnUrl="@(Context.Request.Path + Context.Request.QueryString)" class="btn btn-primary btn-lg flex-grow-1">
                                <i class="bi bi-box-arrow-in-right me-2"></i>Login to Order
                            </a>
                        }

                        @if (canEditProduct)
                        {
                            <div class="dropdown">
                                <button class="btn btn-outline-secondary btn-lg dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-gear"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item" asp-action="Edit" asp-route-id="@Model.Id">
                                            <i class="bi bi-pencil me-2"></i>Edit Product
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@Model.Id">
                                            <i class="bi bi-trash me-2"></i>Delete Product
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Reviews Section -->
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="d-flex align-items-center justify-content-between mb-4 flex-wrap gap-2">
                <h3 class="fw-bold mb-0">
                    <i class="bi bi-chat-left-text me-2" style="color: var(--primary-400);"></i>Reviews
                    <span class="badge rounded-pill ms-2" style="background: rgba(147, 51, 234, 0.15); color: var(--primary-400);">@(Model.Reviews?.Count ?? 0)</span>
                </h3>

                @if (User.Identity.IsAuthenticated)
                {
                    <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#reviewForm">
                        <i class="bi bi-pencil-square me-2"></i>Write a Review
                    </button>
                }
            </div>

            <!-- Review Form -->
            <div class="collapse mb-4 @(Model.Reviews == null || !Model.Reviews.Any() ? "show" : "")" id="reviewForm">
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="card">
                        <div class="card-body p-4">
                            <form asp-action="AddReview" method="post">
                                <input type="hidden" name="productId" value="@Model.Id" />
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Your Review</label>
                                    <textarea name="reviewText" class="form-control" rows="4" placeholder="Share your experience with this product..." required></textarea>
                                </div>
                                <div class="text-end">
                                    <button type="submit" class="btn btn-primary px-4">
                                        <i class="bi bi-send me-2"></i>Post Review
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-primary">
                        <i class="bi bi-info-circle me-2"></i>
                        Please <a asp-area="Identity" asp-page="/Account/Login" asp-route-ReturnUrl="@(Context.Request.Path + Context.Request.QueryString)" class="fw-bold">login</a> to leave a review.
                    </div>
                }
            </div>

            <!-- Reviews List -->
            @if (Model.Reviews != null && Model.Reviews.Any())
            {
                <div class="vstack gap-3">
                    @foreach (var review in Model.Reviews)
                    {
                        var isMyReview = (currentUserId != null && review.UserId == currentUserId);
                        var canManage = isMyReview || isAdmin;

                        <div class="card @(isMyReview ? "" : "")" style="@(isMyReview ? "border: 2px solid var(--primary-500);" : "")">
                            <div class="card-body p-4">
                                <div class="d-flex gap-3">
                                    <div class="user-avatar flex-shrink-0">
                                        @(review.User?.UserName?.Substring(0, 1).ToUpper() ?? "?")
                                    </div>
                                    <div class="flex-grow-1">
                                        <div class="d-flex justify-content-between align-items-start mb-2 flex-wrap gap-2">
                                            <div>
                                                <h6 class="fw-bold mb-0" style="color: var(--text-primary);">
                                                    @(review.User?.UserName ?? "Anonymous")
                                                    @if (isMyReview)
                                                    {
                                                        <span class="badge bg-primary ms-2">You</span>
                                                    }
                                                </h6>
                                                <small class="text-muted">Verified Customer</small>
                                            </div>

                                            @if (canManage)
                                            {
                                                <div id="actions-@review.Id" class="d-flex gap-2">
                                                    <button type="button" class="btn btn-sm btn-outline-primary" onclick="enableEditMode(@review.Id)">
                                                        <i class="bi bi-pencil"></i>
                                                    </button>
                                                    <form asp-action="DeleteReview" method="post" class="d-inline" onsubmit="return confirm('Delete this review?');">
                                                        <input type="hidden" name="reviewId" value="@review.Id" />
                                                        <input type="hidden" name="productId" value="@Model.Id" />
                                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            }
                                        </div>

                                        <div id="view-mode-@review.Id">
                                            <p class="mb-0" style="color: var(--text-secondary);">@review.Text</p>
                                        </div>

                                        @if (canManage)
                                        {
                                            <div id="edit-mode-@review.Id" style="display: none;">
                                                <form asp-action="EditReview" method="post">
                                                    <input type="hidden" name="reviewId" value="@review.Id" />
                                                    <input type="hidden" name="productId" value="@Model.Id" />
                                                    <textarea name="newText" class="form-control mb-3" rows="3">@review.Text</textarea>
                                                    <div class="d-flex gap-2 justify-content-end">
                                                        <button type="button" class="btn btn-sm btn-outline-secondary" onclick="cancelEditMode(@review.Id)">Cancel</button>
                                                        <button type="submit" class="btn btn-sm btn-primary">Save Changes</button>
                                                    </div>
                                                </form>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="empty-state">
                    <div class="empty-state-icon" style="background: rgba(147, 51, 234, 0.1);">
                        <i class="bi bi-chat-left-text" style="color: var(--primary-400);"></i>
                    </div>
                    <h3 class="empty-state-title">No reviews yet</h3>
                    <p class="empty-state-message">Be the first to share your experience!</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- AI Chat Widget -->
<div id="ai-chat-widget">
    <!-- Chat Toggle Button -->
    <button id="chat-toggle-btn" class="chat-toggle-btn" onclick="toggleChat()" title="Ask AI Assistant">
        <i class="bi bi-chat-dots-fill" id="chat-icon"></i>
        <i class="bi bi-x-lg d-none" id="close-icon"></i>
    </button>

    <!-- Chat Window -->
    <div id="chat-window" class="chat-window d-none">
        <div class="chat-header">
            <div class="d-flex align-items-center gap-2">
                <div class="chat-avatar">
                    <i class="bi bi-robot"></i>
                </div>
                <div>
                    <h6 class="mb-0 fw-bold">GoGoGo Assistant</h6>
                    <small class="text-white-50">Ask me about this product</small>
                </div>
            </div>
            <button class="btn btn-link text-white p-0" onclick="toggleChat()">
                <i class="bi bi-dash-lg"></i>
            </button>
        </div>

        <div id="chat-messages" class="chat-messages">
            <div class="chat-message bot-message">
                <div class="message-avatar"><i class="bi bi-robot"></i></div>
                <div class="message-content">
                    <p>Hello! I'm your AI assistant. I can help you with questions about <strong>@Model.Title</strong> or any general questions about our delivery service. How can I help you today?</p>
                </div>
            </div>
        </div>

        <div class="chat-input-container">
            <form id="chat-form" onsubmit="sendMessage(event)">
                <div class="input-group">
                    <input type="text" id="chat-input" class="form-control" placeholder="Type your question..." autocomplete="off">
                    <button type="submit" class="btn btn-primary" id="send-btn">
                        <i class="bi bi-send-fill"></i>
                    </button>
                </div>
            </form>
            <div class="chat-suggestions mt-2">
                <small class="text-muted">Quick questions:</small>
                <div class="d-flex flex-wrap gap-1 mt-1">
                    <button class="btn btn-outline-secondary btn-sm suggestion-btn" onclick="askQuestion('What are the ingredients?')">Ingredients?</button>
                    <button class="btn btn-outline-secondary btn-sm suggestion-btn" onclick="askQuestion('How long is delivery?')">Delivery time?</button>
                    <button class="btn btn-outline-secondary btn-sm suggestion-btn" onclick="askQuestion('What do customers say?')">Reviews?</button>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Chat Widget Styles */
    #ai-chat-widget {
        position: fixed;
        bottom: 24px;
        right: 24px;
        z-index: 9999;
        font-family: inherit;
    }

    .chat-toggle-btn {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: linear-gradient(135deg, var(--primary-500), var(--primary-600));
        border: none;
        color: white;
        font-size: 24px;
        cursor: pointer;
        box-shadow: 0 4px 20px rgba(147, 51, 234, 0.4);
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .chat-toggle-btn:hover {
        transform: scale(1.1);
        box-shadow: 0 6px 30px rgba(147, 51, 234, 0.5);
    }

    .chat-window {
        position: absolute;
        bottom: 80px;
        right: 0;
        width: 380px;
        max-width: calc(100vw - 48px);
        height: 500px;
        max-height: calc(100vh - 150px);
        background: var(--bg-secondary);
        border-radius: 16px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
        display: flex;
        flex-direction: column;
        overflow: hidden;
        border: 1px solid var(--border-color);
    }

    .chat-header {
        background: linear-gradient(135deg, var(--primary-500), var(--primary-600));
        padding: 16px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        color: white;
    }

    .chat-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.2);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
    }

    .chat-messages {
        flex: 1;
        overflow-y: auto;
        padding: 16px;
        display: flex;
        flex-direction: column;
        gap: 12px;
        background: var(--bg-primary);
    }

    .chat-message {
        display: flex;
        gap: 10px;
        max-width: 90%;
        animation: fadeIn 0.3s ease;
    }

    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .bot-message {
        align-self: flex-start;
    }

    .user-message {
        align-self: flex-end;
        flex-direction: row-reverse;
    }

    .message-avatar {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
        font-size: 14px;
    }

    .bot-message .message-avatar {
        background: linear-gradient(135deg, var(--primary-500), var(--primary-600));
        color: white;
    }

    .user-message .message-avatar {
        background: var(--bg-tertiary);
        color: var(--text-primary);
    }

    .message-content {
        padding: 12px 16px;
        border-radius: 16px;
        font-size: 14px;
        line-height: 1.5;
    }

    .bot-message .message-content {
        background: var(--bg-secondary);
        border: 1px solid var(--border-color);
        border-bottom-left-radius: 4px;
        color: var(--text-primary);
    }

    .user-message .message-content {
        background: linear-gradient(135deg, var(--primary-500), var(--primary-600));
        color: white;
        border-bottom-right-radius: 4px;
    }

    .message-content p {
        margin: 0;
    }

    .chat-input-container {
        padding: 12px 16px 16px;
        background: var(--bg-secondary);
        border-top: 1px solid var(--border-color);
    }

    .chat-input-container .form-control {
        border-radius: 24px;
        padding: 10px 16px;
        background: var(--bg-primary);
        border: 1px solid var(--border-color);
        color: var(--text-primary);
    }

    .chat-input-container .form-control:focus {
        border-color: var(--primary-500);
        box-shadow: 0 0 0 3px rgba(147, 51, 234, 0.15);
    }

    .chat-input-container .btn-primary {
        border-radius: 50%;
        width: 42px;
        height: 42px;
        padding: 0;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .suggestion-btn {
        font-size: 11px;
        padding: 4px 10px;
        border-radius: 12px;
    }

    .typing-indicator {
        display: flex;
        gap: 4px;
        padding: 8px 0;
    }

    .typing-indicator span {
        width: 8px;
        height: 8px;
        border-radius: 50%;
        background: var(--text-muted);
        animation: typing 1.4s infinite ease-in-out;
    }

    .typing-indicator span:nth-child(2) { animation-delay: 0.2s; }
    .typing-indicator span:nth-child(3) { animation-delay: 0.4s; }

    @@keyframes typing {
        0%, 60%, 100% { transform: translateY(0); }
        30% { transform: translateY(-8px); }
    }

    /* Scrollbar styling */
    .chat-messages::-webkit-scrollbar {
        width: 6px;
    }

    .chat-messages::-webkit-scrollbar-track {
        background: transparent;
    }

    .chat-messages::-webkit-scrollbar-thumb {
        background: var(--border-color);
        border-radius: 3px;
    }

    .chat-messages::-webkit-scrollbar-thumb:hover {
        background: var(--text-muted);
    }

    /* Mobile responsiveness */
    @@media (max-width: 480px) {
        #ai-chat-widget {
            bottom: 16px;
            right: 16px;
        }

        .chat-window {
            width: calc(100vw - 32px);
            height: calc(100vh - 120px);
            bottom: 70px;
            right: -8px;
        }

        .chat-toggle-btn {
            width: 50px;
            height: 50px;
            font-size: 20px;
        }
    }
</style>

<script>
    const productId = @Model.Id;
    let isTyping = false;

    function toggleChat() {
        const chatWindow = document.getElementById('chat-window');
        const chatIcon = document.getElementById('chat-icon');
        const closeIcon = document.getElementById('close-icon');

        chatWindow.classList.toggle('d-none');
        chatIcon.classList.toggle('d-none');
        closeIcon.classList.toggle('d-none');

        if (!chatWindow.classList.contains('d-none')) {
            document.getElementById('chat-input').focus();
        }
    }

    function askQuestion(question) {
        document.getElementById('chat-input').value = question;
        sendMessage(new Event('submit'));
    }

    async function sendMessage(event) {
        event.preventDefault();

        const input = document.getElementById('chat-input');
        const message = input.value.trim();

        if (!message || isTyping) return;

        // Add user message
        addMessage(message, 'user');
        input.value = '';

        // Show typing indicator
        showTypingIndicator();
        isTyping = true;

        try {
            const response = await fetch('/api/AIChat/ask', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    productId: productId,
                    message: message
                })
            });

            const data = await response.json();

            // Remove typing indicator
            hideTypingIndicator();
            isTyping = false;

            // Add bot response
            if (data.success) {
                addMessage(data.message, 'bot');
            } else {
                addMessage(data.message || 'Sorry, I encountered an error. Please try again.', 'bot');
            }
        } catch (error) {
            console.error('Chat error:', error);
            hideTypingIndicator();
            isTyping = false;
            addMessage('Sorry, I encountered a connection error. Please try again.', 'bot');
        }
    }

    function addMessage(text, sender) {
        const messagesContainer = document.getElementById('chat-messages');
        const messageDiv = document.createElement('div');
        messageDiv.className = `chat-message ${sender}-message`;

        const icon = sender === 'bot' ? 'bi-robot' : 'bi-person-fill';

        // Convert markdown-style formatting to HTML
        let formattedText = text
            .replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')
            .replace(/\*(.*?)\*/g, '<em>$1</em>')
            .replace(/\n/g, '<br>');

        messageDiv.innerHTML = `
            <div class="message-avatar"><i class="bi ${icon}"></i></div>
            <div class="message-content">
                <p>${formattedText}</p>
            </div>
        `;

        messagesContainer.appendChild(messageDiv);
        messagesContainer.scrollTop = messagesContainer.scrollHeight;
    }

    function showTypingIndicator() {
        const messagesContainer = document.getElementById('chat-messages');
        const typingDiv = document.createElement('div');
        typingDiv.className = 'chat-message bot-message';
        typingDiv.id = 'typing-indicator';
        typingDiv.innerHTML = `
            <div class="message-avatar"><i class="bi bi-robot"></i></div>
            <div class="message-content">
                <div class="typing-indicator">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
            </div>
        `;
        messagesContainer.appendChild(typingDiv);
        messagesContainer.scrollTop = messagesContainer.scrollHeight;
    }

    function hideTypingIndicator() {
        const typingIndicator = document.getElementById('typing-indicator');
        if (typingIndicator) {
            typingIndicator.remove();
        }
    }

    // Review edit functions
    function enableEditMode(reviewId) {
        document.getElementById('view-mode-' + reviewId).style.display = 'none';
        var actions = document.getElementById('actions-' + reviewId);
        if(actions) actions.style.display = 'none';
        document.getElementById('edit-mode-' + reviewId).style.display = 'block';
    }

    function cancelEditMode(reviewId) {
        document.getElementById('view-mode-' + reviewId).style.display = 'block';
        var actions = document.getElementById('actions-' + reviewId);
        if(actions) actions.style.display = 'flex';
        document.getElementById('edit-mode-' + reviewId).style.display = 'none';
    }
</script>
