@using Microsoft.AspNetCore.Identity
@using DockerProject.Models

@model DockerProject.Models.Product
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Product Details";
    
    var currentUser = await UserManager.GetUserAsync(User);
    var currentUserId = currentUser?.Id;
    var isAdmin = User.IsInRole("Admin");
    
    var isRestaurantOwner = (Model.Restaurant != null && Model.Restaurant.OwnerId == currentUserId);
    var canEditProduct = isAdmin || isRestaurantOwner;
}

<div class="container py-5">
    
    <div class="card shadow-lg border-0 overflow-hidden mb-5">
        <div class="row g-0">
            <div class="col-md-6 bg-light d-flex align-items-center justify-content-center p-4">
                <div class="position-relative w-100" style="max-width: 500px;">
                    @if (!string.IsNullOrEmpty(Model.ImagePath))
                    {
                        <img src="@Model.ImagePath" class="img-fluid rounded-3 shadow-sm w-100" alt="@Model.Title" style="object-fit: cover; max-height: 450px;">
                    }
                    else
                    {
                        <img src="https://via.placeholder.com/500x400?text=No+Image" class="img-fluid rounded-3 w-100" alt="No Image">
                    }
                </div>
            </div>

            <div class="col-md-6">
                <div class="card-body p-5 d-flex flex-column h-100 justify-content-center">
                    
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <div>
                            @if(Model.Category != null)
                            {
                                <span class="badge bg-warning text-dark me-2">@Model.Category.Name</span>
                            }
                            @if(Model.Restaurant != null)
                            {
                                <a asp-controller="Restaurants" asp-action="Details" asp-route-id="@Model.RestaurantId" class="text-decoration-none text-muted small fw-bold text-uppercase">
                                    <i class="bi bi-shop"></i> @Model.Restaurant.Name
                                </a>
                            }
                        </div>
                        <h2 class="text-primary fw-bold mb-0">@Model.Price.ToString("C")</h2>
                    </div>

                    <h1 class="display-6 fw-bold text-dark mb-4">@Model.Title</h1>

                    <p class="card-text text-secondary fs-5 mb-5" style="line-height: 1.6;">
                        @Model.Description
                    </p>

                    <div class="d-flex gap-2 mt-auto">
                        <button class="btn btn-dark btn-lg flex-grow-1" type="button">
                            <i class="bi bi-bag-plus"></i> Add to Cart
                        </button>

                        @if (canEditProduct)
                        {
                            <div class="dropdown">
                                <button class="btn btn-outline-secondary btn-lg dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-gear"></i> Manage
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@Model.Id"><i class="bi bi-pencil me-2"></i>Edit Product</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@Model.Id"><i class="bi bi-trash me-2"></i>Delete Product</a></li>
                                </ul>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="d-flex align-items-center justify-content-between mb-4 pb-2 border-bottom">
                <h3 class="fw-bold m-0">
                    Reviews <span class="text-muted fs-5 ms-1">(@(Model.Reviews?.Count ?? 0))</span>
                </h3>
                
                @if (User.Identity.IsAuthenticated)
                {
                    <button class="btn btn-primary btn-sm rounded-pill px-3" type="button" data-bs-toggle="collapse" data-bs-target="#reviewForm">
                        <i class="bi bi-pencil-square me-1"></i> Write a Review
                    </button>
                }
            </div>

            <div class="collapse mb-5 @(Model.Reviews == null || !Model.Reviews.Any() ? "show" : "")" id="reviewForm">
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="card bg-light border-0 p-4 rounded-3">
                        <form asp-action="AddReview" method="post">
                            <input type="hidden" name="productId" value="@Model.Id" />
                            <div class="form-group mb-3">
                                <label class="form-label fw-bold small text-uppercase text-muted">Your Experience</label>
                                <textarea name="reviewText" class="form-control border-0 shadow-sm" rows="3" placeholder="Tell us what you liked (or didn't like)..." required></textarea>
                            </div>
                            <div class="text-end">
                                <button type="submit" class="btn btn-primary px-4">Post Review</button>
                            </div>
                        </form>
                    </div>
                }
                else
                {
                    <div class="alert alert-light border text-center">
                        Please <a asp-area="Identity" asp-page="/Account/Login" class="fw-bold">login</a> to verify your purchase and leave a review.
                    </div>
                }
            </div>

            @if (Model.Reviews != null && Model.Reviews.Any())
            {
                <div class="vstack gap-4">
                    @foreach (var review in Model.Reviews)
                    {
                        var isMyReview = (currentUserId != null && review.UserId == currentUserId);
                        var canManage = isMyReview || isAdmin; // Variabila care decide vizibilitatea

                        <div class="d-flex gap-3 mb-4">
                            <div class="flex-shrink-0">
                                <div class="rounded-circle d-flex align-items-center justify-content-center text-white fw-bold shadow-sm" 
                                     style="width: 50px; height: 50px; background-color: @(isMyReview ? "#0d6efd" : "#6c757d");">
                                    @(review.User?.UserName?.Substring(0, 1).ToUpper() ?? "?")
                                </div>
                            </div>
                            
                            <div class="flex-grow-1">
                                <div class="card border-0 shadow-sm @(isMyReview ? "bg-light" : "")">
                                    <div class="card-body p-3">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <div>
                                                <h6 class="fw-bold mb-0">
                                                    @(review.User?.UserName ?? "Anonymous")
                                                    @if (isMyReview) { <span class="badge bg-primary ms-1" style="font-size: 0.6em;">YOU</span> }
                                                    @if (User.IsInRole("Admin")) { <span class="badge bg-danger ms-1" style="font-size: 0.6em;">ADMIN</span> }
                                                </h6>
                                                <small class="text-muted">Verified Customer</small>
                                            </div>
                                            
                                            @if (canManage)
                                            {
                                                <div id="actions-@review.Id" class="btn-group">
                                                    <button type="button" class="btn btn-sm btn-outline-primary" onclick="enableEditMode(@review.Id)">
                                                        <i class="bi bi-pencil"></i> Edit
                                                    </button>
                                                    
                                                    <form asp-action="DeleteReview" method="post" class="d-inline" onsubmit="return confirm('Delete this review?');">
                                                        <input type="hidden" name="reviewId" value="@review.Id" />
                                                        <input type="hidden" name="productId" value="@Model.Id" />
                                                        <button type="submit" class="btn btn-sm btn-danger ms-1">
                                                            <i class="bi bi-trash"></i> X
                                                        </button>
                                                    </form>
                                                </div>
                                            }
                                        </div>

                                        <div id="view-mode-@review.Id">
                                            <p class="card-text text-dark mb-0">@review.Text</p>
                                        </div>

                                        @if (canManage)
                                        {
                                            <div id="edit-mode-@review.Id" style="display: none;">
                                                <form asp-action="EditReview" method="post">
                                                    <input type="hidden" name="reviewId" value="@review.Id" />
                                                    <input type="hidden" name="productId" value="@Model.Id" />
                                                    
                                                    <textarea name="newText" class="form-control mb-2" rows="3">@review.Text</textarea>
                                                    
                                                    <div class="d-flex gap-2 justify-content-end">
                                                        <button type="button" class="btn btn-sm btn-outline-secondary" onclick="cancelEditMode(@review.Id)">Cancel</button>
                                                        <button type="submit" class="btn btn-sm btn-success">Save</button>
                                                    </div>
                                                </form>
                                            </div>
                                        }

                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <img src="https://cdn-icons-png.flaticon.com/512/1078/1078025.png" alt="No Reviews" style="width: 60px; opacity: 0.5;" class="mb-3">
                    <h5 class="text-muted">No reviews yet</h5>
                    <p class="text-secondary">Be the first to share your experience!</p>
                </div>
            }
        </div>
    </div>
</div>

<script>
    function enableEditMode(reviewId) {
        document.getElementById('view-mode-' + reviewId).style.display = 'none';
        
        // Ascundem butoanele de sus cand editam, ca sa nu arate ciudat
        var actions = document.getElementById('actions-' + reviewId);
        if(actions) actions.style.display = 'none';

        document.getElementById('edit-mode-' + reviewId).style.display = 'block';
    }

    function cancelEditMode(reviewId) {
        document.getElementById('view-mode-' + reviewId).style.display = 'block';
        
        var actions = document.getElementById('actions-' + reviewId);
        if(actions) actions.style.display = 'block'; // Le reafisam (display: block sau inline-flex)

        document.getElementById('edit-mode-' + reviewId).style.display = 'none';
    }
</script>