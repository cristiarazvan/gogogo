@model DockerProject.Models.Order

@{
    ViewData["Title"] = "Order Confirmed";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Success Card -->
            <div class="card text-center mb-4">
                <div class="card-body py-5">
                    <div class="order-success-icon">
                        <i class="bi bi-check-lg"></i>
                    </div>
                    <h1 class="order-success-title">Order Confirmed!</h1>
                    <p class="order-success-message">Thank you for your order. We've received your request and it's being processed.</p>

                    <div class="d-inline-flex flex-column flex-md-row gap-3 mt-3">
                        <div class="badge bg-primary-subtle text-primary rounded-pill px-4 py-2">
                            <i class="bi bi-hash me-1"></i>Order #@Model.Id
                        </div>
                        <div class="badge bg-secondary-subtle text-secondary rounded-pill px-4 py-2">
                            <i class="bi bi-calendar me-1"></i>@Model.Date.ToString("MMMM dd, yyyy HH:mm")
                        </div>
                    </div>
                </div>
            </div>

            <!-- Order Details -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0 fw-bold">
                        <i class="bi bi-receipt me-2"></i>Order Details
                    </h5>
                </div>
                <div class="card-body p-0">
                    @foreach (var item in Model.Items)
                    {
                        <div class="d-flex align-items-center p-4 border-bottom">
                            <div class="flex-shrink-0 me-3">
                                @if (!string.IsNullOrEmpty(item.Product.ImagePath))
                                {
                                    <img src="@item.Product.ImagePath" alt="@item.Product.Title" class="rounded" style="width: 60px; height: 60px; object-fit: cover;">
                                }
                                else
                                {
                                    <div class="bg-light rounded d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                        <i class="bi bi-image text-muted"></i>
                                    </div>
                                }
                            </div>
                            <div class="flex-grow-1">
                                <h6 class="fw-bold mb-1">@item.Product.Title</h6>
                                <p class="text-muted small mb-0">@item.Product.Restaurant.Name</p>
                            </div>
                            <div class="text-center me-4">
                                <span class="text-muted small">Qty</span>
                                <div class="fw-bold">@item.Quantity</div>
                            </div>
                            <div class="text-end">
                                <span class="text-muted small">Subtotal</span>
                                <div class="fw-bold text-primary">@((item.Price * item.Quantity).ToString("C"))</div>
                            </div>
                        </div>
                    }
                </div>
                <div class="card-footer bg-transparent">
                    <div class="d-flex justify-content-between align-items-center py-2">
                        <span class="h5 mb-0 fw-bold">Total</span>
                        <span class="h4 mb-0 fw-bold text-primary">@ViewBag.TotalPrice.ToString("C")</span>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="text-center mt-4">
                <div class="d-flex flex-column flex-md-row gap-3 justify-content-center">
                    <a asp-controller="Restaurants" asp-action="Index" class="btn btn-primary btn-lg">
                        <i class="bi bi-bag me-2"></i>Continue Shopping
                    </a>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary btn-lg">
                        <i class="bi bi-house me-2"></i>Go to Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
