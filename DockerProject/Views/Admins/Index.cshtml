@model List<DockerProject.Models.UserViewModel>
@inject Microsoft.AspNetCore.Identity.RoleManager<Microsoft.AspNetCore.Identity.IdentityRole> RoleManager

@{
    ViewData["Title"] = "User Management";
}

<!-- Page Header -->
<div class="page-header mb-4">
    <div class="page-header-content">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <nav aria-label="breadcrumb" class="mb-2">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a href="/" class="text-white-50">Home</a></li>
                            <li class="breadcrumb-item"><a href="#" class="text-white-50">Admin</a></li>
                            <li class="breadcrumb-item active text-white">Users</li>
                        </ol>
                    </nav>
                    <h1 class="page-title">
                        <i class="bi bi-people me-3"></i>User Management
                    </h1>
                    <p class="page-subtitle mb-0">Manage users and their roles</p>
                </div>
                <div class="col-lg-4 text-lg-end mt-3 mt-lg-0">
                    <a asp-action="Create" class="btn btn-light btn-lg">
                        <i class="bi bi-person-plus me-2"></i>Add User
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container pb-5">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Stats Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="admin-stat-card">
                <div class="admin-stat-value">@Model.Count</div>
                <div class="admin-stat-label">Total Users</div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="admin-stat-card" style="border-left-color: var(--success);">
                <div class="admin-stat-value">@Model.Count(u => u.Roles.Contains("Admin"))</div>
                <div class="admin-stat-label">Administrators</div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="admin-stat-card" style="border-left-color: var(--info);">
                <div class="admin-stat-value">@Model.Count(u => u.Roles.Contains("User"))</div>
                <div class="admin-stat-label">Regular Users</div>
            </div>
        </div>
    </div>

    <!-- Users Table -->
    <div class="card">
        <div class="card-header bg-transparent">
            <h5 class="mb-0 fw-bold">
                <i class="bi bi-list-ul me-2"></i>All Users
            </h5>
        </div>
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>User</th>
                        <th>Role</th>
                        <th>Status</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>
                                <div class="user-info">
                                    <div class="user-avatar">
                                        @(user.Email?.Substring(0, 1).ToUpper() ?? "?")
                                    </div>
                                    <div>
                                        <div class="user-name">@user.FullName</div>
                                        <div class="user-email">@user.Email</div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <form asp-action="UpdateRole" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="userId" value="@user.Id" />
                                    <select name="newRole" class="form-select form-select-sm" style="min-width: 150px;" onchange="this.form.submit()">
                                        <option value="">-- Select Role --</option>
                                        @foreach (var role in RoleManager.Roles.ToList())
                                        {
                                            <option value="@role.Name" selected="@(user.Roles.Contains(role.Name))">
                                                @role.Name
                                            </option>
                                        }
                                    </select>
                                </form>
                            </td>
                            <td>
                                <span class="badge bg-success-subtle text-success rounded-pill px-3 py-2">
                                    <i class="bi bi-shield-check me-1"></i>Secure
                                </span>
                            </td>
                            <td class="text-end">
                                <button type="button" class="btn btn-outline-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal@(user.Id)">
                                    <i class="bi bi-trash me-1"></i>Delete
                                </button>

                                <!-- Delete Confirmation Modal -->
                                <div class="modal fade" id="deleteModal@(user.Id)" tabindex="-1" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title fw-bold">
                                                    <i class="bi bi-exclamation-triangle text-danger me-2"></i>Confirm Delete
                                                </h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <p class="mb-3">Are you sure you want to delete user <strong>@user.Email</strong>?</p>
                                                <div class="alert alert-danger mb-0">
                                                    <i class="bi bi-exclamation-circle me-2"></i>
                                                    This action is permanent and cannot be undone!
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                                                <form asp-action="Delete" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@user.Id" />
                                                    <button type="submit" class="btn btn-danger">
                                                        <i class="bi bi-trash me-1"></i>Delete Permanently
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
