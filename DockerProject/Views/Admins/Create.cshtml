@model DockerProject.Models.CreateUserViewModel

@{
    ViewData["Title"] = "Add User";
}

<!-- Page Header -->
<div class="page-header mb-4">
    <div class="page-header-content">
        <div class="container">
            <nav aria-label="breadcrumb" class="mb-2">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="/" class="text-white-50">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index" class="text-white-50">Users</a></li>
                    <li class="breadcrumb-item active text-white">Add New</li>
                </ol>
            </nav>
            <h1 class="page-title">
                <i class="bi bi-person-plus me-3"></i>Add User
            </h1>
            <p class="page-subtitle mb-0">Create a new user account</p>
        </div>
    </div>
</div>

<div class="container pb-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body p-4 p-lg-5">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="All" class="alert alert-danger"></div>

                        <div class="mb-4">
                            <label asp-for="Email" class="form-label fw-bold">Email Address</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                <input asp-for="Email" class="form-control" placeholder="user@example.com" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="FullName" class="form-label fw-bold">Full Name</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text"><i class="bi bi-person"></i></span>
                                <input asp-for="FullName" class="form-control" placeholder="John Doe" />
                            </div>
                            <span asp-validation-for="FullName" class="text-danger small"></span>
                        </div>

                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label asp-for="Password" class="form-label fw-bold">Password</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                    <input asp-for="Password" class="form-control" />
                                </div>
                                <span asp-validation-for="Password" class="text-danger small"></span>
                                <div class="form-text">Minimum 6 characters</div>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ConfirmPassword" class="form-label fw-bold">Confirm Password</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                                    <input asp-for="ConfirmPassword" class="form-control" />
                                </div>
                                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="SelectedRole" class="form-label fw-bold">User Role</label>
                            <select asp-for="SelectedRole" asp-items="@ViewBag.Roles" class="form-select form-select-lg">
                                <option value="">-- Select a role --</option>
                            </select>
                            <span asp-validation-for="SelectedRole" class="text-danger small"></span>
                        </div>

                        <div class="d-flex gap-3">
                            <button type="submit" class="btn btn-primary btn-lg flex-grow-1">
                                <i class="bi bi-check-lg me-2"></i>Create User
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="bi bi-x-lg me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
