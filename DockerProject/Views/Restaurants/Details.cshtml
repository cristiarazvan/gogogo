@using Microsoft.AspNetCore.Identity
@using DockerProject.Models

@model DockerProject.Models.Restaurant

/* InjectÄƒm UserManager pentru a vedea cine este logat */
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Restaurant Details";
    var currentUserId = UserManager.GetUserId(User);
    var isOwner = (currentUserId == Model.OwnerId);
    var isAdmin = User.IsInRole("Admin");
    var canEdit = isOwner || isAdmin;
}

<div class="container mt-4">
    <div class="card mb-5 shadow-sm border-0">
        <div class="row g-0">
            <div class="col-md-4">
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <img src="@Model.ImagePath" class="img-fluid rounded-start h-100" style="object-fit: cover; min-height: 250px; width: 100%;" alt="@Model.Name">
                }
                else
                {
                    <img src="https://via.placeholder.com/400x300?text=No+Restaurant+Image" class="img-fluid rounded-start h-100" style="object-fit: cover; width: 100%;" alt="No Image">
                }
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h1 class="card-title display-5">@Model.Name</h1>
                        @if (Model.IsApproved == 1)
                        {
                            <span class="badge bg-success">Verified <i class="bi bi-check-circle"></i></span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Pending Approval</span>
                        }
                    </div>

                    <p class="card-text text-muted">
                        <strong>Owner:</strong> @(Model.Owner?.UserName ?? "Unknown")
                    </p>
                    
                    <div class="mt-4">
                        @if (canEdit)
                        {
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary me-2">Edit Restaurant</a>
                        }
                        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Menu / Products</h2>
        
        @if (canEdit)
        {
            <a asp-controller="Products" asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-lg"></i> Add New Product
            </a>
        }
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @if (Model.Products != null && Model.Products.Any())
        {
            @foreach (var product in Model.Products)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm product-card">
                        <div style="height: 200px; overflow: hidden;">
                            @if (!string.IsNullOrEmpty(product.ImagePath))
                            {
                                <img src="@product.ImagePath" class="card-img-top" alt="@product.Title" style="height: 100%; width: 100%; object-fit: cover;">
                            }
                            else
                            {
                                <img src="https://via.placeholder.com/300x200?text=No+Food+Image" class="card-img-top" alt="No Image" style="height: 100%; width: 100%; object-fit: cover;">
                            }
                        </div>

                        <div class="card-body d-flex flex-column">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title fw-bold">@product.Title</h5>
                                <span class="badge bg-primary fs-6">@product.Price.ToString("C")</span>
                            </div>
                            
                            <p class="card-text text-muted flex-grow-1">
                                @if (product.Description != null && product.Description.Length > 100)
                                {
                                    @product.Description.Substring(0, 100) <text>...</text>
                                }
                                else
                                {
                                    @product.Description
                                }
                            </p>

                            <div class="d-flex justify-content-between align-items-center mt-3 pt-3 border-top">
                                <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id" class="btn btn-sm btn-info text-white">Details</a>

                                @if (canEdit)
                                {
                                    <div class="btn-group">
                                        <a asp-controller="Products" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-sm btn-outline-warning">Edit</a>
                                        <a asp-controller="Products" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                                    </div>
                                }
                                else
                                {
                                    <div class="btn-group">
                                        @if (User.Identity.IsAuthenticated)
                                        {
                                            <form asp-controller="Cart" asp-action="AddToCart" method="post" class="d-inline">
                                                <input type="hidden" name="productId" value="@product.Id" />
                                                <input type="hidden" name="quantity" value="1" />
                                                <button type="submit" class="btn btn-sm btn-success">
                                                    <i class="bi bi-cart-plus"></i> Add to Cart
                                                </button>
                                            </form>
                                            <form asp-controller="Favorites" asp-action="Add" method="post" class="d-inline">
                                                <input type="hidden" name="productId" value="@product.Id" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                                    <i class="bi bi-heart"></i>
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-sm btn-success">Login to Order</a>
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center py-5">
                <h4 class="text-muted">No products available yet.</h4>
                @if (canEdit)
                {
                    <p>Start adding delicious items to your menu!</p>
                }
            </div>
        }
    </div>
</div>