@model DockerProject.Models.Restaurant

<div class="container mt-4">
    <h1>Detalii Restaurant: @Model.Name</h1>
    <hr />

    <div class="card">
        <div class="card-header">
            Informații Generale
        </div>
        <div class="card-body">
            <h5 class="card-title">Proprietar: @Model.OwnerId</h5>
            <p class="card-text">Status aprobare: 
                @(Model.IsApproved ? "Aprobat" : "În așteptare")
            </p>
            <p>Număr produse în meniu: @(Model.Products?.Count ?? 0)</p>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Înapoi la Listă</a>
    </div>
</div>
