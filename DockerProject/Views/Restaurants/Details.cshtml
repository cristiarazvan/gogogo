@using Microsoft.AspNetCore.Identity
@using DockerProject.Models
@using System.Globalization

@model DockerProject.Models.Restaurant
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = Model.Name;

    var currentUserId = UserManager.GetUserId(User);
    var isOwner = (currentUserId == Model.OwnerId);
    var isAdmin = User.IsInRole("Admin");
    var canEdit = isOwner || isAdmin;

    double averageRating = ViewBag.AverageRating ?? 0;
    int ratingCount = ViewBag.RatingCount ?? 0;
    int myRating = ViewBag.UserRating ?? 0;
}

<style>
    .restaurant-hero {
        background: var(--gradient-primary);
        position: relative;
        padding: 0;
        overflow: hidden;
    }

    .restaurant-hero::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.05'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
        z-index: 1;
    }

    .restaurant-hero-image {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        object-fit: cover;
        width: 100%;
        height: 100%;
        opacity: 0.3;
    }

    .restaurant-hero-content {
        position: relative;
        z-index: 2;
        padding: 60px 0;
    }

    .rating-wrapper {
        display: inline-flex;
        flex-direction: row-reverse;
        justify-content: center;
        gap: 0.25rem;
    }

    .rating-wrapper input {
        display: none;
    }

    .rating-wrapper label {
        cursor: pointer;
        font-size: 2rem;
        color: var(--text-muted);
        transition: all 0.2s ease;
    }

    .rating-wrapper label:hover,
    .rating-wrapper label:hover ~ label {
        color: var(--warning);
        transform: scale(1.1);
    }

    .rating-wrapper input:checked ~ label {
        color: var(--warning);
    }

    .menu-product-card {
        background: var(--bg-card);
        border: 1px solid var(--border-color);
        border-radius: var(--radius-xl);
        overflow: hidden;
        transition: all 0.3s ease;
        height: 100%;
    }

    .menu-product-card:hover {
        transform: translateY(-6px);
        box-shadow: var(--shadow-purple);
        border-color: rgba(147, 51, 234, 0.4);
    }

    .menu-product-image {
        height: 160px;
        object-fit: cover;
        width: 100%;
    }

    .menu-product-price {
        position: absolute;
        bottom: 10px;
        right: 10px;
        background: var(--gradient-primary);
        color: white;
        padding: 0.4rem 0.8rem;
        border-radius: var(--radius-full);
        font-weight: 700;
        font-size: 0.9rem;
        box-shadow: var(--shadow-purple);
    }

    .menu-product-body {
        padding: 1rem;
    }

    .menu-product-actions {
        padding: 0.75rem 1rem;
        background: var(--bg-tertiary);
        border-top: 1px solid var(--border-color);
        display: flex;
        gap: 0.5rem;
    }
</style>

<!-- Restaurant Hero -->
<div class="restaurant-hero">
    @if (!string.IsNullOrEmpty(Model.ImagePath))
    {
        <img src="@Model.ImagePath" class="restaurant-hero-image" alt="@Model.Name">
    }

    <div class="restaurant-hero-content">
        <div class="container">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb" class="mb-3">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/" class="text-white-50">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index" class="text-white-50">Restaurants</a></li>
                    <li class="breadcrumb-item active text-white">@Model.Name</li>
                </ol>
            </nav>

            <div class="row align-items-center">
                <div class="col-lg-8">
                    <div class="d-flex align-items-center gap-2 mb-3 flex-wrap">
                        @if (Model.IsApproved == 1)
                        {
                            <span class="badge bg-success rounded-pill px-3 py-2">
                                <i class="bi bi-check-circle-fill me-1"></i>Verified
                            </span>
                        }
                        else if (Model.IsApproved == 0)
                        {
                            <span class="badge bg-warning text-dark rounded-pill px-3 py-2">
                                <i class="bi bi-hourglass-split me-1"></i>Pending
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-danger rounded-pill px-3 py-2">
                                <i class="bi bi-x-circle-fill me-1"></i>Denied
                            </span>
                        }

                    </div>

                    <h1 class="display-5 fw-bold text-white mb-3">@Model.Name</h1>

                    <div class="d-flex align-items-center gap-4 text-white flex-wrap">
                        <div class="d-flex align-items-center">
                            <div class="rating me-2">
                                @for(int i = 1; i <= 5; i++) {
                                    if(averageRating >= i) {
                                        <i class="bi bi-star-fill text-warning"></i>
                                    } else if(averageRating > i - 0.5) {
                                        <i class="bi bi-star-half text-warning"></i>
                                    } else {
                                        <i class="bi bi-star text-white-50"></i>
                                    }
                                }
                            </div>
                            <span class="fw-bold">@averageRating.ToString("0.0", CultureInfo.InvariantCulture)</span>
                            <span class="text-white-50 ms-1">(@ratingCount reviews)</span>
                        </div>
                        <div class="text-white-50">
                            <i class="bi bi-person me-1"></i>@(Model.Owner?.UserName ?? "Unknown")
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 text-lg-end mt-4 mt-lg-0">
                    <div class="d-flex flex-wrap gap-2 justify-content-lg-end">
                        <a asp-action="Index" class="btn btn-outline-light">
                            <i class="bi bi-arrow-left me-2"></i>Back
                        </a>
                        @if (canEdit)
                        {
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-light">
                                <i class="bi bi-pencil me-2"></i>Edit
                            </a>
                            <a asp-controller="Products" asp-action="Create" asp-route-restaurantId="@Model.Id" class="btn btn-success">
                                <i class="bi bi-plus-lg me-2"></i>Add Product
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container py-4">
    <!-- Rating Card -->
    <div class="row mb-4">
        <div class="col-lg-8 mx-auto">
            <div class="card">
                <div class="card-body py-4 text-center">
                    <h5 class="fw-bold mb-3">
                        <i class="bi bi-star me-2 text-warning"></i>Rate this Restaurant
                    </h5>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <form asp-action="SubmitRating" method="post" id="ratingForm">
                            <input type="hidden" name="restaurantId" value="@Model.Id" />
                            <div class="rating-wrapper">
                                <input type="radio" id="star5" name="score" value="5" @(myRating == 5 ? "checked" : "") onchange="this.form.submit()" /><label for="star5"><i class="bi bi-star-fill"></i></label>
                                <input type="radio" id="star4" name="score" value="4" @(myRating == 4 ? "checked" : "") onchange="this.form.submit()" /><label for="star4"><i class="bi bi-star-fill"></i></label>
                                <input type="radio" id="star3" name="score" value="3" @(myRating == 3 ? "checked" : "") onchange="this.form.submit()" /><label for="star3"><i class="bi bi-star-fill"></i></label>
                                <input type="radio" id="star2" name="score" value="2" @(myRating == 2 ? "checked" : "") onchange="this.form.submit()" /><label for="star2"><i class="bi bi-star-fill"></i></label>
                                <input type="radio" id="star1" name="score" value="1" @(myRating == 1 ? "checked" : "") onchange="this.form.submit()" /><label for="star1"><i class="bi bi-star-fill"></i></label>
                            </div>
                        </form>
                        <div class="mt-2">
                            @if(myRating > 0)
                            {
                                <div class="d-flex align-items-center justify-content-center gap-2 flex-wrap">
                                    <span class="badge bg-success-subtle text-success rounded-pill px-3 py-2" style="background: rgba(16, 185, 129, 0.15) !important; color: #10b981 !important;">
                                        <i class="bi bi-check-circle me-1"></i>You rated: @myRating / 5
                                    </span>
                                    <form asp-action="WithdrawRating" method="post" class="d-inline">
                                        <input type="hidden" name="restaurantId" value="@Model.Id" />
                                        <button type="submit" class="btn btn-outline-danger btn-sm" title="Remove your rating">
                                            <i class="bi bi-x-circle me-1"></i>Withdraw Rating
                                        </button>
                                    </form>
                                </div>
                            }
                            else
                            {
                                <span class="text-muted small">Click a star to leave your rating</span>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="py-2">
                            <p class="text-muted mb-3 small">Please log in to rate this restaurant</p>
                            <a asp-area="Identity" asp-page="/Account/Login" asp-route-ReturnUrl="@(Context.Request.Path + Context.Request.QueryString)" class="btn btn-primary btn-sm">
                                <i class="bi bi-box-arrow-in-right me-2"></i>Login to Rate
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Menu Section -->
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div>
            <h2 class="fw-bold mb-1">
                <i class="bi bi-book me-2" style="color: var(--primary-400);"></i>Menu
            </h2>
            <p class="text-muted mb-0">@(Model.Products?.Count ?? 0) items available</p>
        </div>
    </div>

    @if (Model.Products != null && Model.Products.Any())
    {
        <div class="row g-4">
            @foreach (var product in Model.Products)
            {
                <div class="col-sm-6 col-lg-4 col-xl-3">
                    <div class="menu-product-card">
                        <div class="position-relative overflow-hidden">
                            @if (!string.IsNullOrEmpty(product.ImagePath))
                            {
                                <img src="@product.ImagePath" class="menu-product-image" alt="@product.Title">
                            }
                            else
                            {
                                <div class="menu-product-image d-flex align-items-center justify-content-center" style="background: var(--bg-tertiary);">
                                    <i class="bi bi-image fs-1 text-muted"></i>
                                </div>
                            }
                            <span class="menu-product-price">@product.Price.ToString("C")</span>
                        </div>

                        <div class="menu-product-body">
                            <h6 class="fw-bold mb-1" style="color: var(--text-primary);">@product.Title</h6>
                            <p class="small mb-0" style="color: var(--text-muted); display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">
                                @product.Description
                            </p>
                        </div>

                        <div class="menu-product-actions">
                            <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-eye"></i>
                            </a>
                            @if (canEdit)
                            {
                                <a asp-controller="Products" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-outline-secondary btn-sm">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-controller="Products" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-outline-danger btn-sm">
                                    <i class="bi bi-trash"></i>
                                </a>
                            }
                            else if (User.Identity.IsAuthenticated)
                            {
                                <form asp-controller="Cart" asp-action="AddToCart" method="post" class="d-contents">
                                    <input type="hidden" name="productId" value="@product.Id" />
                                    <input type="hidden" name="quantity" value="1" />
                                    <button type="submit" class="btn btn-primary btn-sm flex-grow-1">
                                        <i class="bi bi-cart-plus me-1"></i>Add
                                    </button>
                                </form>
                                <form asp-controller="Favorites" asp-action="Add" method="post" class="d-contents">
                                    <input type="hidden" name="productId" value="@product.Id" />
                                    <button type="submit" class="btn btn-outline-danger btn-sm" title="Add to favorites">
                                        <i class="bi bi-heart"></i>
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <div class="empty-state-icon" style="background: rgba(147, 51, 234, 0.1);">
                <i class="bi bi-cup-hot" style="color: var(--primary-400);"></i>
            </div>
            <h3 class="empty-state-title">Menu is empty</h3>
            <p class="empty-state-message">This restaurant hasn't added any products yet</p>
            @if (canEdit)
            {
                <a asp-controller="Products" asp-action="Create" asp-route-restaurantId="@Model.Id" class="btn btn-primary">
                    <i class="bi bi-plus-lg me-2"></i>Add First Product
                </a>
            }
        </div>
    }
</div>
