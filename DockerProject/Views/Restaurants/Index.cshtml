@using Microsoft.AspNetCore.Identity
@using System.Globalization
@using DockerProject.Models
@using Microsoft.AspNetCore.Http.Extensions

@model IEnumerable<DockerProject.Models.Restaurant>
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Discover Restaurants";
    var currentUserId = UserManager.GetUserId(User);
    var isAdmin = User.IsInRole("Admin");
    
    // Parametrii curenti
    var currentSort = ViewBag.CurrentSort as string;
    
    // Categoriile selectate (convertim la lista pentru a folosi .Contains)
    var currentFilters = ViewBag.CurrentFilter as string[]; 
    var selectedCats = currentFilters != null ? new HashSet<string>(currentFilters) : new HashSet<string>();
    
    var allCategories = ViewBag.Categories as List<string>;

    // Helpers UI: Câte filtre sunt active?
    int activeCount = selectedCats.Count;
    string filterLabel = activeCount > 0 ? $"Categories ({activeCount})" : "Categories";
    string filterBtnClass = activeCount > 0 ? "btn-dark text-white" : "btn-white border";

    // --- LOGICA PENTRU PASTRAREA FILTRELOR CAND SORTAM ---
    // Construim un dictionar de parametri pentru link-urile de Sortare
    var sortRouteParams = new Dictionary<string, string>();
    // Din pacate, asp-all-route-data nu suporta array-uri usor, asa ca vom folosi o metoda manuala jos la Sortare
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    .toolbar-container {
        background: #fff;
        padding: 15px 20px;
        border-radius: 12px;
        box-shadow: 0 2px 15px rgba(0,0,0,0.05);
    }
    .restaurant-card {
        border: none;
        border-radius: 16px;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        background: #fff;
        box-shadow: 0 4px 6px rgba(0,0,0,0.02);
    }
    .restaurant-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.08) !important;
    }
    .card-img-left { height: 100%; min-height: 240px; object-fit: cover; }
    .status-badge { position: absolute; top: 15px; left: 15px; font-weight: 600; box-shadow: 0 2px 5px rgba(0,0,0,0.2); }
    
    /* Dropdown personalizat pentru Checkbox-uri */
    .dropdown-menu-filter {
        min-width: 250px;
        padding: 15px;
    }
    .form-check-input:checked {
        background-color: #0d6efd;
        border-color: #0d6efd;
    }
</style>

<div class="container py-5">
    <div class="mb-5 text-center">
        <h1 class="display-4 fw-bold ls-tight">Discover Great Food</h1>
        <p class="text-muted lead">Explore the best restaurants in town.</p>
    </div>

    <div class="toolbar-container mb-5">
        <div class="row g-3 align-items-center">
            
            <div class="col-lg-5">
                <div class="input-group input-group-lg">
                    <span class="input-group-text bg-transparent border-end-0 ps-3 text-muted">
                        <i class="bi bi-search"></i>
                    </span>
                    <input type="text" class="form-control border-start-0 bg-light" placeholder="Search (Coming Soon...)">
                </div>
            </div>

            <div class="col-lg-7 d-flex gap-2 flex-wrap justify-content-lg-end">
                
                <div class="dropdown">
                    <button class="btn btn-lg px-4 dropdown-toggle @filterBtnClass" type="button" data-bs-toggle="dropdown" data-bs-auto-close="outside">
                        <i class="bi bi-funnel-fill me-2"></i> @filterLabel
                    </button>
                    
                    <div class="dropdown-menu dropdown-menu-filter shadow border-0">
                        <form method="get" asp-action="Index">
                            <h6 class="dropdown-header px-0 mb-2">Select Categories</h6>
                            
                            <input type="hidden" name="sortOrder" value="@currentSort" />

                            <div class="vstack gap-2 mb-3" style="max-height: 200px; overflow-y: auto;">
                                @if (allCategories != null)
                                {
                                    foreach (var cat in allCategories)
                                    {
                                        bool isChecked = selectedCats.Contains(cat);
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="categoryFilter" value="@cat" id="cat_@cat" @(isChecked ? "checked" : "")>
                                            <label class="form-check-label" for="cat_@cat">
                                                @cat
                                            </label>
                                        </div>
                                    }
                                }
                            </div>
                            
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-sm">Apply Filters</button>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="dropdown">
                    <button class="btn btn-lg border px-4 dropdown-toggle btn-white" type="button" data-bs-toggle="dropdown">
                        <i class="bi bi-sort-down me-2"></i> Sort
                    </button>
                    <ul class="dropdown-menu shadow border-0 dropdown-menu-end">
                        @{
                            // Helper corectat pentru generarea URL-urilor
                            string GetSortUrl(string sortValue)
                            {
                                // 1. Generăm baza URL-ului cu parametrul de sortare (dacă există)
                                var routeValues = new Dictionary<string, object>();
                                if (!string.IsNullOrEmpty(sortValue))
                                {
                                    routeValues["sortOrder"] = sortValue;
                                }
            
                                // Url.Action se ocupă de primul '?' dacă avem sortOrder
                                string url = Url.Action("Index", routeValues);

                                // 2. Adăugăm manual filtrele de categorie
                                if(currentFilters != null && currentFilters.Length > 0)
                                {
                                    // Verificăm inteligent ce separator folosim
                                    // Dacă URL-ul are deja '?', folosim '&'. Dacă nu, punem '?'
                                    char separator = url.Contains("?") ? '&' : '?';

                                    foreach(var f in currentFilters)
                                    {
                                        url += $"{separator}categoryFilter={f}";
                                        separator = '&'; // După primul parametru, restul sunt mereu cu '&'
                                    }
                                }
                                return url;
                            }
                        }

                        <li><a class="dropdown-item @(string.IsNullOrEmpty(currentSort) ? "active" : "")" href="@GetSortUrl("")">Default</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item @(currentSort == "RatingDesc" ? "active" : "")" href="@GetSortUrl("RatingDesc")">Highest Rated</a></li>
                        <li><a class="dropdown-item @(currentSort == "RatingAsc" ? "active" : "")" href="@GetSortUrl("RatingAsc")">Lowest Rated</a></li>
                        <li><a class="dropdown-item @(currentSort == "NameAsc" ? "active" : "")" href="@GetSortUrl("NameAsc")">Name (A-Z)</a></li>
                    </ul>
                </div>

                @if (activeCount > 0 || !string.IsNullOrEmpty(currentSort))
                {
                    <a asp-action="Index" class="btn btn-lg btn-outline-danger px-3" title="Clear All">
                        <i class="bi bi-x-lg"></i>
                    </a>
                }

                @if (isAdmin)
                {
                    <div class="vr mx-2 d-none d-md-block"></div>
                    <a asp-action="Create" class="btn btn-primary btn-lg px-4 fw-bold">
                        <i class="bi bi-plus-lg"></i>
                    </a>
                }
            </div>
        </div>
    </div>

    <div class="row g-4">
        @if (!Model.Any())
        {
            <div class="col-12 text-center py-5">
                <i class="bi bi-filter-circle fs-1 text-muted mb-3 opacity-50"></i>
                <h3 class="text-muted">No restaurants match your filters.</h3>
                <a asp-action="Index" class="btn btn-outline-primary mt-3">Clear Filters</a>
            </div>
        }
        else
        {
            @foreach (var item in Model)
            {
                double avgRating = item.Ratings != null && item.Ratings.Any() ? item.Ratings.Average(r => r.Score) : 0;
                int countRating = item.Ratings?.Count ?? 0;
                var isOwner = (currentUserId != null && item.OwnerId == currentUserId);
                var canManage = isOwner || isAdmin;

                <div class="col-12">
                    <div class="card restaurant-card @(isOwner ? "border border-2 border-primary" : "")">
                        <div class="row g-0 h-100">
                            <div class="col-md-5 col-lg-4 position-relative">
                                 @if (!string.IsNullOrEmpty(item.ImagePath))
                                {
                                    <img src="@item.ImagePath" class="w-100 card-img-left" alt="@item.Name">
                                }
                                else
                                {
                                    <div class="w-100 card-img-left bg-light d-flex align-items-center justify-content-center text-muted"><i class="bi bi-image fs-1"></i></div>
                                }
                                @if (item.IsApproved == 1) { <span class="badge bg-success status-badge rounded-pill px-3 py-2"><i class="bi bi-check-circle-fill me-1"></i> Verified</span> }
                                else if (item.IsApproved == 0) { <span class="badge bg-danger status-badge rounded-pill px-3 py-2"><i class="bi bi-x-circle-fill me-1"></i> Denied</span> }
                                else { <span class="badge bg-warning text-dark status-badge rounded-pill px-3 py-2"><i class="bi bi-hourglass-split me-1"></i> Pending</span> }
                            </div>
                            
                            <div class="col-md-7 col-lg-8">
                                <div class="card-body p-4 p-lg-5 d-flex flex-column h-100">
                                    <div class="mb-2">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <h2 class="card-title fw-bold text-dark mb-1">@item.Name</h2>
                                            @if (isOwner) { <span class="badge bg-primary rounded-pill">Yours</span> }
                                        </div>
                                        <p class="card-text text-muted small mb-3">Managed by @(item.Owner?.UserName ?? "Unknown")</p>
                                    </div>

                                    <div class="d-flex align-items-center mb-4">
                                        <div class="text-warning fs-5 me-2">
                                            @for(int i=1; i<=5; i++) {
                                                if(avgRating >= i) { <i class="bi bi-star-fill"></i> }
                                                else if(avgRating > i-0.5) { <i class="bi bi-star-half"></i> }
                                                else { <i class="bi bi-star text-muted opacity-25"></i> }
                                            }
                                        </div>
                                        <span class="fw-bold text-dark me-1">@avgRating.ToString("0.0", CultureInfo.InvariantCulture)</span>
                                        <span class="text-muted small">(@countRating reviews)</span>
                                    </div>
                                    
                                    <div class="mt-auto d-flex flex-wrap gap-2">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-dark rounded-pill fw-bold px-4">View Menu <i class="bi bi-arrow-right ms-2"></i></a>
                                        @if (canManage)
                                        {
                                            <div class="vr mx-1 d-none d-md-block"></div>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning rounded-pill px-3 fw-bold"><i class="bi bi-pencil-fill me-1"></i> Edit</a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger rounded-pill px-3 fw-bold"><i class="bi bi-trash-fill me-1"></i> Delete</a>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>