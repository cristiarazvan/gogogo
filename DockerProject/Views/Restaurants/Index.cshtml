
@model IEnumerable<DockerProject.Models.Restaurant>
<p>
    <a asp-action="Create" class="btn btn-primary">Adaugă Restaurant Nou</a>
</p>

<div class="container mt-4">
    <h2>Lista Restaurante (Hardcodat)</h2>

    <table class="table table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Restaurant</th>
                <th>Proprietar</th>
                <th>Status</th>
                <th>Meniu (Produse)</th>
                <th>Actiuni</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <strong>@item.Name</strong>
                        <br/>
                        <small class="text-muted">ID: @item.Id</small>
                    </td>
                    <td>@item.OwnerId</td>
                    <td>
                        @if (item.IsApproved)
                        {
                            <span class="badge bg-success">Aprobat</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">În așteptare</span>
                        }
                    </td>
                    
                    <td>
                        @if (item.Products != null && item.Products.Any())
                        {
                            <ul class="list-unstyled">
                                @foreach(var prod in item.Products)
                                {
                                    <li class="mb-1">
                                        • <strong>@prod.Title</strong> 
                                        - @prod.Price Lei 
                                        <span class="text-muted" style="font-size:0.9em;">
                                            (Stoc: @prod.Stock)
                                        </span>
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <span class="text-muted">Nu există produse adăugate.</span>
                        }
                    </td>

                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalii</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
