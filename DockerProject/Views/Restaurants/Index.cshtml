@using Microsoft.AspNetCore.Identity
@using System.Globalization
@using DockerProject.Models
@using Microsoft.AspNetCore.Http.Extensions

@model IEnumerable<DockerProject.Models.Restaurant>
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Discover Restaurants";
    var currentUserId = UserManager.GetUserId(User);
    var isAdmin = User.IsInRole("Admin");

    var currentSort = ViewBag.CurrentSort as string;
}

<!-- Page Header -->
<div class="page-header mb-4">
    <div class="page-header-content">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <nav aria-label="breadcrumb" class="mb-2">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a href="/" class="text-white-50">Home</a></li>
                            <li class="breadcrumb-item active text-white">Restaurants</li>
                        </ol>
                    </nav>
                    <h1 class="page-title">Discover Great Food</h1>
                    <p class="page-subtitle mb-0">Explore the best restaurants in your area</p>
                </div>
                <div class="col-lg-4 text-lg-end mt-3 mt-lg-0">
                    @if (isAdmin)
                    {
                        <a asp-action="Create" class="btn btn-light btn-lg">
                            <i class="bi bi-plus-lg me-2"></i>Add Restaurant
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container pb-5">
    <!-- Toolbar -->
    <div class="toolbar">
        <div class="toolbar-search">
            <i class="bi bi-search"></i>
            <input type="text" class="form-control form-control-lg" placeholder="Search restaurants...">
        </div>

        <div class="toolbar-filters d-flex gap-2 flex-wrap">
            <!-- Sort Dropdown -->
            <div class="dropdown">
                <button class="btn btn-lg btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                    <i class="bi bi-sort-down me-2"></i>Sort
                </button>
                <ul class="dropdown-menu dropdown-menu-end shadow">
                    @{
                        string GetSortUrl(string sortValue)
                        {
                            var routeValues = new Dictionary<string, object?>();
                            if (!string.IsNullOrEmpty(sortValue))
                            {
                                routeValues["sortOrder"] = sortValue;
                            }
                            return Url.Action("Index", routeValues) ?? "#";
                        }
                    }
                    <li><a class="dropdown-item @(string.IsNullOrEmpty(currentSort) ? "active" : "")" href="@GetSortUrl("")"><i class="bi bi-list me-2"></i>Default</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item @(currentSort == "RatingDesc" ? "active" : "")" href="@GetSortUrl("RatingDesc")"><i class="bi bi-star-fill me-2 text-warning"></i>Highest Rated</a></li>
                    <li><a class="dropdown-item @(currentSort == "RatingAsc" ? "active" : "")" href="@GetSortUrl("RatingAsc")"><i class="bi bi-star me-2"></i>Lowest Rated</a></li>
                    <li><a class="dropdown-item @(currentSort == "NameAsc" ? "active" : "")" href="@GetSortUrl("NameAsc")"><i class="bi bi-sort-alpha-down me-2"></i>Name (A-Z)</a></li>
                </ul>
            </div>

            <!-- Clear Filters -->
            @if (!string.IsNullOrEmpty(currentSort))
            {
                <a asp-action="Index" class="btn btn-lg btn-outline-danger" title="Clear All Filters">
                    <i class="bi bi-x-lg"></i>
                </a>
            }
        </div>
    </div>

    <!-- Restaurant Grid -->
    <div class="row g-4">
        @if (!Model.Any())
        {
            <div class="col-12">
                <div class="empty-state">
                    <div class="empty-state-icon" style="background: rgba(147, 51, 234, 0.1);">
                        <i class="bi bi-search" style="color: var(--primary-400);"></i>
                    </div>
                    <h3 class="empty-state-title">No restaurants found</h3>
                    <p class="empty-state-message">Try adjusting your filters or search terms</p>
                    <a asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-arrow-counterclockwise me-2"></i>Clear Filters
                    </a>
                </div>
            </div>
        }
        else
        {
            @foreach (var item in Model)
            {
                double avgRating = item.Ratings != null && item.Ratings.Any() ? item.Ratings.Average(r => r.Score) : 0;
                int countRating = item.Ratings?.Count ?? 0;
                var isOwner = (currentUserId != null && item.OwnerId == currentUserId);
                var canManage = isOwner || isAdmin;

                <div class="col-12">
                    <div class="card restaurant-card @(isOwner ? "border-start border-4 border-primary" : "")">
                        <div class="row g-0">
                            <div class="col-md-4 position-relative" style="overflow: hidden;">
                                @if (!string.IsNullOrEmpty(item.ImagePath))
                                {
                                    <img src="@item.ImagePath" class="restaurant-card-image h-100" alt="@item.Name">
                                }
                                else
                                {
                                    <div class="h-100 d-flex align-items-center justify-content-center" style="min-height: 240px; background: var(--bg-tertiary);">
                                        <i class="bi bi-image fs-1 text-muted"></i>
                                    </div>
                                }

                                <!-- Status Badge -->
                                <div class="position-absolute top-0 start-0 m-3">
                                    @if (item.IsApproved == 1)
                                    {
                                        <span class="badge bg-success rounded-pill px-3 py-2 shadow">
                                            <i class="bi bi-check-circle-fill me-1"></i>Verified
                                        </span>
                                    }
                                    else if (item.IsApproved == 0)
                                    {
                                        <span class="badge bg-danger rounded-pill px-3 py-2 shadow">
                                            <i class="bi bi-x-circle-fill me-1"></i>Denied
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark rounded-pill px-3 py-2 shadow">
                                            <i class="bi bi-hourglass-split me-1"></i>Pending
                                        </span>
                                    }
                                </div>
                            </div>

                            <div class="col-md-8">
                                <div class="restaurant-card-body d-flex flex-column h-100">
                                    <div class="d-flex justify-content-between align-items-start mb-2 flex-wrap gap-2">
                                        <div>
                                            <h3 class="restaurant-card-title mb-1">@item.Name</h3>
                                            <p class="text-muted small mb-0">
                                                <i class="bi bi-person me-1"></i>Managed by @(item.Owner?.UserName ?? "Unknown")
                                            </p>
                                        </div>
                                        @if (isOwner)
                                        {
                                            <span class="badge bg-primary rounded-pill px-3">
                                                <i class="bi bi-star-fill me-1"></i>Your Restaurant
                                            </span>
                                        }
                                    </div>

                                    <!-- Product Count -->
                                    @if (item.Products != null && item.Products.Any())
                                    {
                                        <div class="mb-3">
                                            <span class="restaurant-card-category">
                                                <i class="bi bi-box me-1"></i>@item.Products.Count products
                                            </span>
                                        </div>
                                    }

                                    <!-- Rating -->
                                    <div class="d-flex align-items-center mb-4">
                                        <div class="rating me-2">
                                            @for(int i = 1; i <= 5; i++) {
                                                if(avgRating >= i) {
                                                    <i class="bi bi-star-fill"></i>
                                                } else if(avgRating > i - 0.5) {
                                                    <i class="bi bi-star-half"></i>
                                                } else {
                                                    <i class="bi bi-star"></i>
                                                }
                                            }
                                        </div>
                                        <span class="rating-value">@avgRating.ToString("0.0", CultureInfo.InvariantCulture)</span>
                                        <span class="text-muted small ms-1">(@countRating reviews)</span>
                                    </div>

                                    <!-- Actions -->
                                    <div class="mt-auto d-flex flex-wrap gap-2">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">
                                            <i class="bi bi-eye me-2"></i>View Menu
                                        </a>
                                        @if (canManage)
                                        {
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">
                                                <i class="bi bi-pencil me-2"></i>Edit
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                                <i class="bi bi-trash me-2"></i>Delete
                                            </a>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
